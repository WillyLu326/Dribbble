<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_info_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/medium_space"
    android:background="@color/grey">

    <ImageView
        android:id="@+id/profile_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/profile_avatar"
            android:layout_width="@dimen/header_image_size"
            android:layout_height="@dimen/header_image_size"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/medium_space"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/image_circle"
            fresco:roundedCornerRadius="50dp" />

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_space"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/large_size"
            android:textStyle="bold"
            tools:text="Willy Lu" />

        <TextView
            android:id="@+id/profile_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_space"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/xmedium_size"
            tools:text="Location" />

        <TextView
            android:id="@+id/profile_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/xsmall_size"
            tools:text="Hi! I am a Freelance Illustrator and Designer, available for hire: savic.a@live.com" />

        <TextView
            android:id="@+id/profile_status_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/medium_space"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_group_white_18dp"
            android:drawablePadding="@dimen/xsmall_space"
            android:background="@drawable/following_btn"
            android:text="@string/following"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profile_likes_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/small_space"
                android:layout_marginBottom="@dimen/small_space"
                android:layout_marginLeft="@dimen/medium_space"
                android:layout_marginRight="@dimen/small_space"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_favorite_white_18dp"
                android:background="@drawable/profile_info_bg"
                android:padding="@dimen/small_space"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/xsmall_size"
                android:textStyle="bold"
                tools:text="Likes 3" />

            <TextView
                android:id="@+id/profile_followers_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/small_space"
                android:layout_marginRight="@dimen/medium_space"
                android:layout_marginTop="@dimen/small_space"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_group_white_18dp"
                android:background="@drawable/profile_info_bg"
                android:padding="@dimen/small_space"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/xsmall_size"
                android:textStyle="bold"
                tools:text="3" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>

