<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/popup_window_bg_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/popup_window_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/medium_size"
        android:text="@string/popup_window_save"
        android:textAlignment="center"
        android:textSize="@dimen/medium_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/popup_window_line" />

    <TextView
        android:id="@+id/popup_window_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/medium_size"
        android:text="@string/popup_window_cancel"
        android:textAlignment="center"
        android:textSize="@dimen/medium_size" />

</LinearLayout>