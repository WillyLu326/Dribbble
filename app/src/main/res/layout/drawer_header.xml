<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/drawer_header_image"
            android:layout_width="@dimen/header_image_size"
            android:layout_height="@dimen/header_image_size"
            android:layout_marginBottom="@dimen/small_space"
            android:layout_marginLeft="@dimen/medium_space"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/image_circle"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundedCornerRadius="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_marginTop="@dimen/small_space"
            android:layout_toRightOf="@id/drawer_header_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/drawer_header_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/drawer_header_text_size"
                android:textStyle="bold"
                tools:text="Willy Lu" />

            <TextView
                android:id="@+id/drawer_header_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xsmall_space"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:text="@string/drawer_menu_logout"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="italic"
                android:textSize="@dimen/xsmall_size" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>